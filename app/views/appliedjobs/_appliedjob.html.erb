<div id="<%= dom_id appliedjob %>">
  <p>
    <strong>Resume:</strong>
    <% if appliedjob.resume.attached? %>
      <% if appliedjob.resume.representable? %>
      <%= image_tag appliedjob.resume.representation(resize_to_limit: [100, 100]) %>
      <% else %>
      <%= link_to rails_blob_path(appliedjob.resume, disposition: "attachment") do %>
      <% end %> 
     <%end%>
    <%end%>    
  </p>
<p>
    <strong>Resume:</strong>
    <%= appliedjob.resume %>
  </p> 
  <p>
    <strong>Job:</strong>
    <%= appliedjob.job.job_title %>
  </p>

  <p>
    <strong>Contact:</strong>
    <%= appliedjob.user.email %>
  </p>

  <%if current_user.usertype == "Recruiter" %>
  <%= form_with(model: appliedjob) do |form| %>
    <div>
    <%= form.label :status %><br />
    <%= form.select :status, ['Accept', 'Reject'], selected: 'Accept' %>
  </div>
  <div>
    <%= form.submit %>
  </div>
  <%end%>
  <%end%>

  <p>
 
  <strong>Status:</strong>
    <%= appliedjob.status.nil? ? "Pending" : appliedjob.status %>
 
  </p>

</div>
