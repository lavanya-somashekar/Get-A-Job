<div class="col-md-4">
  <div class="card-sub">
    <div class="card shadow p-3 mb-5 rounded">
      <div class="ms-2 ">
        <div >
          <div class="card text-center">
            <div class="card-header ">
              <h5 class="card-title"><%=job.job_title%> </h5>
            </div>
            <div class="card-body pt-2 m-4">
              <div class="widget-49">
                  <p> <b>Company Name : </b><%=job.company_name%></p> 
                  <p> <b>Skills : </b><%=job.skills%></p>
                  <p> <b>Job Description : </b><%= job.job_description %></p>
                  <p><b>Pay Package : </b><%=  job.pay  %></p>
                  <p> <b>Job Type : </b><%= job.job_type %></p>
                <div class="row d-flex justify-content-center align-items-center">
                  <%if current_user.usertype == "Recruiter" %>
                    <center>  <%= link_to "Show this job", job ,class:"btn btn-group-small my-small-btn gradient-custom-2",style: "color:white"%></center>
                  <%end%>
                  <%if current_user.usertype == "Candidate" %>
                    <div class="d-grid gap-2 col-6 mx-auto" >
                      <center> <%= link_to "Apply for this job", apply_path(job.id),class:"btn btn-group-small my-small-btn gradient-custom-2 ",style: "color:white"%></center>
                    </div>
                  <%end%>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>              
</div>


