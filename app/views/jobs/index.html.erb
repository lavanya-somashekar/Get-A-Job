<p style="color: green"><%= notice %></p>
<%= render 'home/header'%>

<div id="jobs" style="background-image: url('/assets/company.jpeg');background-size: 2000px 3900px">
  <% @jobs.each do |job| %>
    <%= render job %>
      <%if current_user.usertype == "Recruiter" %>
        <div class="d-grid gap-2 col-6 mx-auto">
        <br>
        <center>  <%= link_to "Show this job", job ,class:"btn btn-group-small my-small-btn ",style: "width:20rem;background-color:#C24641;color:white"%></center>
        </div>
      <br><br>
      <%end%>
    <%if current_user.usertype == "Candidate" %>
      <div class="d-grid gap-2 col-6 mx-auto" >
      <br>
    <center> <%= link_to "Apply for this job", apply_path(job.id),class:"btn btn-group-small my-small-btn ",style: "width:20rem;background-color:#C24641;color:white"%></center><br><br>
      </div>
    <%end%>
  <% end %>


<%if current_user.usertype == "Recruiter" %>
<%= link_to "New Job", new_job_path , class:"btn btn-group-small my-small-btn",style: "width:10rem;background-color:#C24641;color:white"%>
<% end%>
</div>


