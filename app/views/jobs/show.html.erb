<%= render 'home/header'%>
<p style="color: green"><%= notice %></p>
<br><br>


<center>
<div class="row d-flex justify-content-center m-0">
    <div class="col-sm-12">
      <div class="row" id="sortable">
        <div class="col-md-12">
          <div class="card-sub">
            <div class="card shadow p-3 mb-5 rounded">
              <div class="ms-2 ">
                <div >
                  <div class="card text-center">
                    <div class="card-header ">
                      <h4 class="card-title"><%=@job.job_title%> </h4>
                    </div>
                    <div class="card-body pt-2 m-4">
                      <div class="widget-49">
                        <p> <b>Company Name : </b><%=@job.company_name%></p>
                        <p> <b>Skills : </b><%=@job.skills%></p>
                        <p> <b>Job Description : </b><%= @job.job_description %></p>
                        <p><b>Pay Package : </b><%=  @job.pay  %></p>
                        <p> <b>Job Type : </b><%= @job.job_type %></p>
                        <div class="row d-flex justify-content-center align-items-center">
                          <%if current_user.usertype == "Recruiter" %>
                            <center> </center>
                          <%end%>
                          <%if current_user.usertype == "Candidate" %>
                            <div class="d-grid gap-2 col-6 mx-auto" >
                              <center> </center>
                            </div>
                          <%end%>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>


<br>

  <%= link_to "Edit this job", edit_job_path(@job),class:"btn btn-group-small my-small-btn gradient-custom-2 ",style: "width:10rem;color:white" %> 
  <%= link_to "Back to jobs", jobs_path , class:"btn btn-group-small my-small-btn gradient-custom-2",style: "width:10rem;color:white" %><br><br>
  
  <%= button_to "Delete this job", @job, method: :delete ,class:"btn btn-group-small my-small-btn gradient-custom-2",style: "width:10rem;color:white"%>
  <br><br>
<%= render "display" , job: @job %> 
</center>


